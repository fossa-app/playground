<reactiveui:ReactiveWindow
    x:Class="WpfOidcClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveui="http://reactiveui.net"
    xmlns:vm="clr-namespace:WpfOidcClient.ViewModels;assembly=WpfOidcClient.ViewModels"
    Title="WPF OIDC Client"
    Width="1100"
    Height="650"
    x:TypeArguments="vm:IMainViewModel"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="txbMessage"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Segoe UI Light, San Serif"
            FontSize="24"
            Text="Signing In..."
            TextWrapping="Wrap" />
    </Grid>
</reactiveui:ReactiveWindow>
